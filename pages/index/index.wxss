.titleBar {
  background-color: #00a1e9;
  display:flex;
  padding-left: 20rpx;
  width: 750rpx;
  height: 42rpx;
  text-align: center;
  padding-bottom: 15rpx;
}

.scroll-view{
  background-color: #00a1e9;
}

.titleBar-list {
  display:flex;
  flex-direction:column;
  color: white;
  width: 120rpx;
  font-size: 35rpx;
  line-height: 42rpx;
}
.line{
  background-color: white;
  color: #00a1e9;
  width: 40rpx;
  height: 6rpx;
  font-size: 36rpx;
  line-height: 42rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.container{
  margin: 0;
  padding: 0;
  /*background-color: #00a1e9;*/
  width: 750rpx;
}
.body{
  text-align: center;
  width: 750rpx;
  /*background-color: red;*/
  padding-top:10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx; 
}
.imageView{
  margin-left: 15rpx; 
  position: relative;
  height: 300rpx;
  width: 720rpx;
  text-align: center;
  /*background-color: yellow;*/
}
.banner-bg{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  width: 100%;
  height: 100%;
}

.banner-bg-tip{
  position: absolute;
  color: white;
  background-color: red;
  top: 0rpx;
  right: 0rpx;
  font-size: 25rpx;
  line-height: 30rpx;
  padding: 10rpx;
  opacity: 0.5;
  border-bottom-left-radius: 0.8em;
}
.banner-title{
  text-align: left;
  position: absolute;
  bottom: 40rpx;
  left: 20rpx;
  color: white;
  font-size: 25rpx;
  line-height: 30rpx;
  background-color: gray;
  margin-right: 20rpx;
  padding: 5rpx; 
  opacity: 0.85;
}
.first-source-time{
  display: flex;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}
.banner-source{
  position: relative;
  bottom: 10rpx;
  left: 20rpx;
  color: #666;
  font-size: 20rpx;
  line-height: 28rpx;
}
.banner-time{
  position: relative;
  bottom: 10rpx;
  left: 30rpx;
  color: #666;
  font-size: 20rpx;
  line-height: 28rpx;
}
.news-list{
  margin-left: 15rpx;
  margin-top: 15rpx;
  position: relative;
  height: 150rpx;
  width: 720rpx;
  text-align: center;
  border-bottom: 1px solid rgb(206, 204, 204);
  /*background-color: black;*/
}

.news-list-title{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  color: black;
  font-size: 25rpx;
  line-height: 30rpx;
  width: 500rpx;
  text-align: left;
}
.source-time{
  display: flex;
  position: absolute;
  margin-top: 120rpx;
  left: 0rpx;
}
.news-list-source{
  position: relative;
  bottom: 20rpx;
  left: 20rpx;
  color: #666;
  font-size: 20rpx;
  line-height: 28rpx;
}
.news-list-time{
  position: relative;
  bottom: 20rpx;
  left: 30rpx;
  color: #666;
  font-size: 20rpx;
  line-height: 28rpx;
}
.news-list-image{
  padding: 0;
  width: 180rpx;
  height: 110rpx;
  position: absolute;
  right: 0rpx;
  top: 20rpx;
}